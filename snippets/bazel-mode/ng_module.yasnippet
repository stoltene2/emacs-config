load("@angular//:index.bzl", "ng_module")

ng_module(
    name = "${1:component-name}",
    srcs = glob(
        ["**/*.ts"],
        exclude = ["**/*.spec.ts"],
    ),
    assets = [
        ":css",
        ":html",
    ],
    module_name = "@base/$1",
)
